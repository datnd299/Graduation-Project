<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
    android:id="@+id/txtPlaceName"
    android:text="sfdsf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</TextView>
    <TextView

        android:id="@+id/txtTime"
        android:text="sfdsf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/txtAmount"
        android:text="sfdsf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NV đã trả?">

                </TextView>
                <CheckBox
                    android:id="@+id/chEmComfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></CheckBox>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ghi chú nhân viên"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEmNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đối tác đã nhận?">

                </TextView>
                <CheckBox
                    android:id="@+id/chPtBConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></CheckBox>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ghi chú đối tác"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPtBNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
