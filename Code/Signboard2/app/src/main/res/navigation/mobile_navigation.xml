<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.signboard2.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.signboard2.ui.tasks.TaskFragment"
        android:label="Nhiệm vụ"
        tools:layout="@layout/fragment_tasks" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.signboard2.ui.notifications.NotificationsFragment"
        android:label="Thông báo"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.signboard2.ui.account.AccountFragment"
        android:label="Tài khoản"
        tools:layout="@layout/fragment_account" />
</navigation>
